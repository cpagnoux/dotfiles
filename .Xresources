! font rendering
Xft.dpi:       96
Xft.antialias: true
Xft.hinting:   true
Xft.rgba:      rgb
Xft.autohint:  false
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault

! font
URxvt.font:           xft:Source Code Pro:style=Regular:pixelsize=16
URxvt.boldFont:       xft:Source Code Pro:style=Bold:pixelsize=16
URxvt.italicFont:     xft:Source Code Pro:style=Italic:pixelsize=16
URxvt.boldItalicFont: xft:Source Code Pro:style=Bold Italic:pixelsize=16
URxvt.letterSpace:    -1

! general
URxvt.scrollBar: false

! clickable URLs
URxvt.perl-ext-common: default,matcher
URxvt.url-launcher:    /usr/bin/xdg-open
URxvt.matcher.button:  1

